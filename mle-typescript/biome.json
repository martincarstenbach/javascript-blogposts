{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "files": {
        "ignoreUnknown": true,
        "includes": ["src/**/*.ts"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double",
            "quoteProperties": "preserve",
            "trailingCommas": "all",
            "semicolons": "always",
            "operatorLinebreak": "after"
        },
        "assist": {
            "enabled": true
        }
    }
}
